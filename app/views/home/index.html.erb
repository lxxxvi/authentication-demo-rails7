<h1>Welcome</h1>

<% if logged_in? %>
  <% unless current_user.email_confirmed? %>
    <p>Please confirm your email address using the link in the email you received.</p>
    <%= button_to 'Resend confirmation email', user_email_confirmations_resend_path %>
  <% end %>

  <p>You are logged in as <%= current_user.username %>. <%= button_to 'log out', log_out_path, method: :delete %> </p>
<% else %>
  <p>You are not logged in.</p>
  <p>You can <%= link_to 'log in', log_in_path %> or <%= link_to 'sign up', sign_up_path %>.
<% end %>
