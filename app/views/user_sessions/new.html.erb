<h1>Log in</h1>

<% if @error %>
  <p>Couldn't log you in. Wrong username/password combination or unconfirmed email address.</p>
<% end %>

<%= form_for :user_session, url: user_sessions_path do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %>

  <%= f.label :Password, "Password" %>
  <%= f.password_field :password %>

  <%= f.submit "Log in", :disable_with => 'Logging in...' %>
<% end %>
